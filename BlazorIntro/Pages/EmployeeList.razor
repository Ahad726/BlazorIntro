@page "/employee"
@inherits EmployeeListBase

<h3>EmployeeList</h3>


<div class="card-deck">
    @foreach (var employee in Employees)
    {
        <div class="card">
            <div class="card-header"><p>@employee.Name</p> </div>
            <div class="card-body"><img class="card-img-top imageThumbnail" src="@employee.PhotoPath" /> </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary m-1">View</a>    
                <a href="#" class=" btn btn-primary m-1">Edit</a>    
                <a href="#" class="btn btn-danger m-1">Delete</a>    
            </div>
        </div>
    }
</div>